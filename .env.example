# ================================
# ARCHIVO DE EJEMPLO PARA VARIABLES DE ENTORNO
# ================================
# COPIAR ESTE ARCHIVO COMO .env Y CONFIGURAR VALORES REALES
# NUNCA SUBIR .env AL REPOSITORIO GIT

# Base de datos
DB_URL=jdbc:postgresql://localhost:5432/fitmanager
DB_USERNAME=tu_usuario_db
DB_PASSWORD=tu_password_super_seguro

# JWT (GENERAR UNA CLAVE SEGURA DE AL MENOS 32 CARACTERES)
JWT_SECRET=tu-clave-jwt-super-segura-de-al-menos-32-caracteres-aqui
JWT_EXPIRATION=1800000
JWT_INACTIVITY_TIMEOUT=1800000
JWT_ACTIVITY_CHECK=300000

# Configuración del servidor
SERVER_PORT=9090

# Configuración JPA
JPA_DDL_AUTO=update
JPA_SHOW_SQL=false
JPA_FORMAT_SQL=false
SQL_INIT_MODE=never
JPA_DEFER_INIT=false

# ================================
# PARA GENERAR UNA CLAVE JWT SEGURA:
# ================================
# 1. Usa un generador online de claves aleatorias
# 2. O ejecuta este comando en terminal:
#    openssl rand -base64 32
# 3. O en Java:
#    KeyGenerator.getInstance("HmacSHA256").generateKey()
# ================================
